{
  "name": "bibtex-annotation",
	"displayName": "Bibtex Annotation",
	"description": "Add annotations for .bib files",
	"publisher": "jungtravor",
	"author": {
		"name": "Zitao Zhou"
	},
	"icon": "icon.png",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onCommand:bibtex-annotation.format.file.numbers"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bibtex-annotation.format.file.numbers",
				"title": "Annotation using numbers"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus && resourceLangId==bibtex",
					"command": "bibtex-annotation.format.file.numbers",
					"group": "1_modification"
				}
			],
			"explorer/context": [
				{
					"when": "resourceLangId==bibtex",
					"command": "bibtex-annotation.format.file.numbers",
					"group": "7_modification"
				}
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jungtravor/bibtext-annotation.git"
	},
	"homepage": "https://github.com/jungtravor/bibtext-annotation/blob/master/README.md",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.69.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "eslint": "^8.18.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "@vscode/test-electron": "^2.1.5"
    }

}
